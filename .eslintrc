{
  "parser": "babel-eslint",
  "rules": {
    "no-console": "off"
  },
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "env": {
    "browser": true,
    "es6": true
  },  
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./src/bundler/webpack.server.config.js"
      },
      "node": {
        "extensions": [".js",".jsx"]
       }
    },
    "react": { 
      "version": "^16.8.3"
    }

  },
  "extends": ["airbnb-base", "eslint:recommended", "plugin:react/recommended"]
}